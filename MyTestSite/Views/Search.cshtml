@inherits Umbraco.Web.Mvc.UmbracoViewPage<Search>
@{
	Layout = "master.cshtml";
}
<header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>@Model.Name</h1>
                    <span class="subheading"></span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <form action="/search/" method="GET" id="search">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="form-group controls">
                    <input type="text" class="form-control col-xs-6" placeholder="Search for something..." name="q" value=""/>
                </div>
            </div>
            <div class="col-md-10 col-lg-8 mx-auto">
                <div class="form-group">
                    <button class="btn btn primary serch-button">Search<i class="fa fa-search"></i></button>
                </div>
            </div>
            <div class="col-md-10 col-lg-8 mx-auto">
                <p>There are no search results</p>
            </div>
        </div>
    </form>
</div>
